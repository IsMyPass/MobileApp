<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.RegistrationPage"
             BackgroundColor="White">
  
  <ContentPage.Content>
    <StackLayout Spacing="10" Padding="5">
      <Label Text="Para registrar seu aplicativo informe o número de seu celular, em seguida você receberá um código de confirmação via SMS."/>
      
      <Label Text="Informe o número do seu celular."
             VerticalOptions="Center"
             HorizontalOptions="Center"/>
      
      <Entry x:Name="entryPhone"
             VerticalOptions="Center"
             Placeholder="(99) 9999-9999" 
             FontSize="18"/>

      <Label Text="Código de Confirmação."
             VerticalOptions="Center"
             HorizontalOptions="Center"/>

      <Entry x:Name="entryCodigo"
             VerticalOptions="Center"
             FontSize="18"
             IsEnabled="False"/>
      
      <Button x:Name="btnEnviarConfirmar" 
              Text="Enviar"
              VerticalOptions="EndAndExpand"
              HorizontalOptions="FillAndExpand"
              Clicked="OnEnviarConfimarClicked"/>
    
    </StackLayout>
  </ContentPage.Content>
</ContentPage>